{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "ES2018",
    "lib": ["es6", "dom", "es2016", "es2017", "ES2015"],
    "sourceMap": true,
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "rollup.config.js"]
}
